<div class="columns is-centered columns-container">
<%= form_for @user do |f| %>
  <div class="field">
    <%= f.label :username, class: 'label' %>
    <div class="control">
      <%= f.text_field :username, class: 'input' %>
    </div>
  </div>

  <div class="field">
    <%= f.label :email, class: 'label' %>
    <div class="control">
      <%= f.email_field :email, class: 'input' %>
    </div>
  </div>

  <div class="control">
    <%= f.submit submit_text, class: 'button is-primary' %>
  </div>
<% end %>
</div>
